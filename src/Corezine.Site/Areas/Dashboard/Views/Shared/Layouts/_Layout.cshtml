<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Corezine Dashboard</title>
    <link rel="stylesheet" href="~/lib/bulma/bulma.min.css">
    <link rel="stylesheet" href="~/lib/bulma/bulma-helpers.min.css">
    <link rel="stylesheet" href="~/css/dashboard.min.css">
</head>
<body class="">
    <section class="section is-paddingless columns" id="base_body">
        <div class="column is-one-fifth has-background-white" id="sidebar">
            <h1 class="title is-6 is-marginless has-background-light has-text-dark">
                Corezine Dashbard
            </h1>
            <div class="media user">
                <div class="media-left">
                    <figure class="image is-48x48">
                        <img class="is-rounded" src="~/dashboard/images/user-image.jpg" alt="">
                    </figure>
                </div>
                <div class="media-content">
                    <p class="title is-6">@User.Identity.Name</p>
                    <p class="subtitle is-6">
                        <small>
                            <a href="#">Profile</a> - <a asp-area="Frontend" asp-controller="Account" asp-action="Logout" class="has-text-danger">Logout</a>
                        </small>
                    </p>
                </div>
            </div>
            <div class="divider"></div>
            <partial name="./../Shared/Partials/_Sidebar" />
        </div>
        <div class="column is-four-fifth is-paddingless" id="page">
            <nav class="navbar is-light" role="navigation" aria-label="Navigation" id="header-nav">
                <div class="navbar-brand">
                    <a href="./index.html" class="navbar-item">
                        <img src="~/images/corezine-logo-200x200.png" alt="">
                    </a>
                </div>
                <div class="navbar-menu">
                    <div class="navbar-start">
                        <a href="#" class="navbar-item">Dashboard</a>
                        <a href="#" class="navbar-item">Settings</a>
                        <div class="navbar-item has-dropdown is-hoverable">
                            <a href="#" class="navbar-link">Account</a>
                            <div class="navbar-dropdown">
                                <a href="#" class="navbar-item">My Profile</a>
                                <a href="#" class="navbar-item">Credintials</a>
                                <a href="#" class="navbar-item">Logout</a>
                            </div>
                        </div>
                    </div>
                    <div class="navbar-end">
                        <div class="navbar-item">
                            <div class="buttons">
                                <a asp-area="Frontend" asp-controller="Home" asp-action="Index" target="_blank" class="button is-dark">Visit Website</a>
                                <a asp-area="Frontend" asp-controller="Account" asp-action="Logout" class="button is-danger">Logout</a>
                            </div>

                        </div>
                    </div>
                </div>
            </nav>

            <section class="section" id="content">
                <div class="container">
                    @RenderBody()
                </div>
            </section>
            <nav class="navbar is-light is-fixed-bottom" role="navigation" aria-label="Navigation" id="footer">
                <div class="navbar-brand">
                    <a href="./index.html" class="navbar-item">
                        <img src="./images/bulma-logo.png" alt="">
                    </a>
                </div>
                <div class="navbar-menu">
                    <div class="navbar-start">
                        <div class="navbar-item">


                        </div>
                    </div>
                    <div class="navbar-end">
                        <a href="#" class="navbar-item">Dashboard</a>
                        <a href="#" class="navbar-item">Settings</a>
                        <div class="navbar-item has-dropdown is-hoverable">
                            <a href="#" class="navbar-link">Account</a>
                            <div class="navbar-dropdown">
                                <a href="#" class="navbar-item">My Profile</a>
                                <a href="#" class="navbar-item">Credintials</a>
                                <a href="#" class="navbar-item">Logout</a>
                            </div>
                        </div>
                    </div>

                </div>
            </nav>
        </div>
    </section>

    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <script defer src="~/js/dashboard.min.js"></script>
    @RenderSection("Scripts", required : false)
</body>
</html>